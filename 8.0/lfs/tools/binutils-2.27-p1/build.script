# create build-folder

mkdir -v build
cd build

# configure and build

../configure                   \
    --prefix=/tools            \
    --with-sysroot=$LFS        \
    --with-lib-path=/tools/lib \
    --target=$LFS_TGT          \
    --disable-nls              \
    --disable-werror

make

echo "Build time: $SECONDS"

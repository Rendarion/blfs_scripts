# net device iwlwifi
SUBSYSTEM=="net", ACTION=="add", DRIVERS=="?*", ATTR{address}=="00:21:6a:60:de:52", ATTR{dev_id}=="0x0", ATTR{type}=="1", NAME="wlan0"
EOF


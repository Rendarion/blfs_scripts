make install &&

cp -a docs docs-save       &&
rm -rf docs/examples/.deps &&

find docs \( -name Makefile\* \
          -o -name \*.1       \
          -o -name \*.3 \)    \
          -exec rm {} \;      &&
install -v -d -m755 /usr/share/doc/curl-7.47.1 &&
cp -v -R docs/*     /usr/share/doc/curl-7.47.1 &&

rm -rf docs &&
mv -i docs-save doc
